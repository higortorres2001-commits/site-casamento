{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    {
      "source": "/lista/:slug",
      "destination": "/api/og-preview/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(whatsapp|facebookexternalhit|twitterbot|linkedinbot|telegrambot|discordbot|pinterest|slackbot).*"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/warm-functions",
      "schedule": "*/5 * * * *"
    }
  ]
}